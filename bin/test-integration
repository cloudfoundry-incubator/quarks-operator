#!/bin/sh
set -eu


TEST_NAMESPACE=${TEST_NAMESPACE:-"test$(date +%s)"}
export TEST_NAMESPACE

remove_namespace() {
  kubectl delete namespace "$TEST_NAMESPACE"
}
trap remove_namespace EXIT

bin/apply-crds

kubectl get customresourcedefinitions
kubectl namespace "$TEST_NAMESPACE" || kubectl create namespace "$TEST_NAMESPACE"

ginkgo integration/
